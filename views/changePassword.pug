extends layouts/main

block content
    .form-container
        form(action=(routes.users + routes.changePassword), method="post")
            input(type="password", placeHolder="Current Passport", name="currentPassword")
            input(type="password", placeHolder="New Passport", name="newPassword1")
            input(type="password", placeHolder="Verify New Passport", name="newPassword2")
            input(type="submit", value="Change Password")