header#header
    .container
        .row
            .header
                .header__logo
                    a(href=routes.home)
                        i.fa.fa-youtube-play(aria-hidden="true")
                        span WeTube
                
                .header__searching
                    form(action=routes.search, method="get")
                        input(type="text" placeholder="Search By Terms" name="term")

                .header__config
                    ul 
                        if !user
                            li
                                a(href=routes.join) Join
                            li
                                a(href=routes.login) Log in

                        else
                            li
                                a(href=routes.videos + routes.upload) Upload
                            li
                                a(href=routes.userDetail(user.id)) Profile
                            li
                                a(href=routes.logout) Log Out